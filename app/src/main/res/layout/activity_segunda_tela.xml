<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3F41"
    tools:context=".SegundaTela">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-black"
        android:text="E.I.T.ARecife"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="265dp"
        android:layout_height="57dp"
        android:fontFamily="sans-serif-black"
        android:text="InfraRecife"
        android:textColor="#FFFAFA"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#F8FAFB"
        android:drawableTint="#2196F3"
        android:fontFamily="sans-serif-black"
        android:foregroundTint="#2196F3"
        android:shadowColor="#2196F3"
        android:text="Continuar"
        android:textColor="#000000"
        android:textColorHighlight="#F7FCFF"
        android:textColorHint="#2196F3"
        android:textColorLink="#2196F3"
        android:textSize="18sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.422"
        app:rippleColor="#2196F3"
        app:strokeColor="#000000"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="313dp"
        android:layout_height="155dp"
        android:autoSizeTextType="none"
        android:fontFamily="sans-serif-black"
        android:text="A manutenção das vias por parte do poder público pode e deve ser facilitada pela tecnologia, por intermédio deste aplicativo cidadãos comuns poderão auxiliar a identificação de irregularidades nas vias de forma prática, ágil e precisa."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="139dp"
        android:autoSizeTextType="none"
        android:fontFamily="sans-serif-black"
        android:text="A checagem será feita a partir do envio de imagens que devem ser mandadas diretamente pela câmera do celular com o aplicativo aberto, para localizar as irregularidades o usuário precisa estar com a localização do dispositivo ativa na hora do envio da imagem e com acesso à internet móvel. "
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="314dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se você entendeu a ideia do nosso app, siga para a próxima página para nos ajudar!"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="509dp" />
</androidx.constraintlayout.widget.ConstraintLayout>